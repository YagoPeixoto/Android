<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="yago.br.aulaead.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir Navegador"
        android:id="@+id/btAbrirNavegador"
        android:onClick="abrirNavegador"
        android:layout_below="@+id/btLigarNum"
        android:layout_alignEnd="@+id/btLigarNum"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Ligar"
        android:id="@+id/btLigarNum"
        android:onClick="ligarNum"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Contatos"
        android:id="@+id/button"
        android:onClick="buscarContato"
        android:layout_below="@+id/btAbrirNavegador"
        android:layout_alignEnd="@+id/btAbrirNavegador"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir Mapa"
        android:id="@+id/button2"
        android:onClick="abrirMapa"
        android:layout_below="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fazer Pesquisa"
        android:id="@+id/btFazerPesquisa"
        android:onClick="fazerPesquisa"
        android:layout_below="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fazerPesquisa"
        android:layout_below="@+id/btFazerPesquisa"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir camera"
        android:id="@+id/button3"
        android:layout_below="@+id/fazerPesquisa"
        android:layout_alignEnd="@+id/fazerPesquisa"
        android:layout_alignParentStart="true"
        android:onClick="abrirCamera" />

</RelativeLayout>
