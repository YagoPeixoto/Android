<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="yago.br.appimc_com_startactivityforresult.SegundaTela">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="25dp"
        android:paddingBottom="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/telefone"
        android:textSize="25dp"
        android:layout_below="@+id/nome"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/nome"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textSize="25dp"
        android:layout_below="@+id/telefone"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/telefone"
        android:paddingBottom="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/peso"
        android:textSize="25dp"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/email"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/altura"
        android:textSize="25dp"
        android:layout_below="@+id/peso"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/peso"
        android:paddingBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click p/Fazer Calculo Do IMC"
        android:id="@+id/calcularimc"
        android:onClick="calcularIMC"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
